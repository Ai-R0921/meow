<div class="row justify-content-center">
  <% post_images.each do |post_image| %>
  <div class="one-post">
    <p class="caption"><%= post_image.title %></p>
    <%= link_to post_image_path(post_image) do %>
      <% if post_image.image.attached? %>
        <%= image_tag post_image.image, class:"image-shape" %>
      <% end %>
    <% end %>
    <p class="caption">
      <i class="fa-solid fa-heart white"></i>&nbsp;<%= link_to "#{post_image.post_image_favorites.count}", post_image_path(post_image) %>&emsp;
      <i class="fa-solid fa-comment white"></i>&nbsp;<%= link_to "#{post_image.post_image_comments.count}", post_image_path(post_image) %>
    </p>
  </div>
  <% end %>
  <% post_lost_cats.each do |post_lost_cat| %>
  <div class="one-post">
    <p class="caption"><%= post_lost_cat.title %></p>
    <%= link_to post_lost_cat_path(post_lost_cat) do %>
      <% if post_lost_cat.image.attached? %>
        <%= image_tag post_lost_cat.image, class:"image-shape" %>
      <% end %>
    <% end %>
    <p class="caption">
      <i class="fa-solid fa-heart white"></i>&nbsp;<%= link_to "#{post_lost_cat.post_lost_cat_favorites.count}", post_lost_cat_path(post_lost_cat) %>&emsp;
      <i class="fa-solid fa-comment white"></i>&nbsp;<%= link_to "#{post_lost_cat.post_lost_cat_comments.count}", post_lost_cat_path(post_lost_cat) %>
    </p>
  </div>
  <% end %>
</div>