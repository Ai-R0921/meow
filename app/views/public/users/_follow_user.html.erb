<% if user_signed_in? && user != current_user %>
  <% if user.following?(current_user) %>
    <%= link_to "Unfollow", user_relationships_path(user), class:"unfollow-button", method: :delete, remote: true %>
  <% else %>
    <%= link_to "Follow", user_relationships_path(user), class:"follow-button", method: :post, remote: true %>
  <% end %>
<% end %>