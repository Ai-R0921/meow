<h1>My Page</h1>
<% if @user.profile_image.attached? %>
  <%= image_tag @user.profile_image, :size => '200x200' %>
<% else %>
  <%= image_tag 'NO_IMAGE.png', size: '200x200' %>
<% end %>
<%= @user.user_name %>
<%= link_to "Edit", edit_user_path %>
<%= link_to "ブックマーク一覧", favorites_user_path(current_user) %>

<h2>Posts</h2>
<% @post_images.each do |post_image| %>
  <%= post_image.title %>
  <% if post_image.image.attached? %>
    <%= image_tag post_image.image, size: '200x200' %>
  <% end %>
<% end %>
<% @post_lost_cats.each do |post_lost_cat| %>
  <%= post_lost_cat.title %>
  <% if post_lost_cat.image.attached? %>
    <%= image_tag post_lost_cat.image, size: '200x200' %>
  <% end %>
<% end %>

<h3>下書き一覧</h3>
<%= link_to "下書き一覧", confirm_post_images_path %>