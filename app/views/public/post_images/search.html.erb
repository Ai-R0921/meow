<div class="main top">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col mx-auto margin">
        <h1 class="about"><i class="icon"></i>Search result</h1>
      </div>
    </div>
    <div class="row justify-content-center section_title">
      <%= @section_title %>
    </div>
    <div class="row justify-content-center">
      <% @post_images.each do |post_image| %>
        <div class="one-post">
          <p class="caption"><%= post_image.title.truncate(10, omission: "...") %></p>
          <% if post_image.user.is_deleted %>
            <% next %>
          <% end %>
          <%= link_to post_image_path(post_image) do %>
            <% if post_image.image.attached? %>
              <%= image_tag post_image.image, class:"image-shape" %>
            <% end %>
          <% end %>
          <p class="caption"><%= post_image.user.user_name %></p>
          <p class="caption">
            <!--<i class="fa-solid fa-heart white"></i>&nbsp;<%#= link_to "#{post_image.post_image_favorites.count}", post_image_path(post_image) %>&emsp;-->
            <!--<i class="fa-solid fa-heart white"></i>&nbsp;<%#= post_lost_cat.post_lost_cat_favorites.count %>&emsp;-->
            <!--<i class="fa-solid fa-comment white"></i>&nbsp;<%#= link_to "#{post_image.post_image_comments.count}", post_image_path(post_image) %>-->
            <!--<i class="fa-solid fa-comment white"></i>&nbsp;<%#= link_to "#{post_lost_cat.post_lost_cat_comments.count}", post_lost_cat_path(post_lost_cat) %>-->
          </p>
        </div>
      <% end %>
    </div>
  </div>
</div>

