<% if user_signed_in? %>
  <% if post_image.favorited_by?(current_user) %>
  <h3>
    <%= link_to post_image_post_image_favorites_path(post_image), class:"white", method: :delete, remote: true do %>
      ♥<%= post_image.post_image_favorites.count %>
    <% end %>
  </h3>
  <% else %>
  <h3>
    <%= link_to post_image_post_image_favorites_path(post_image), class:"white", method: :post, remote: true do %>
      ♡<%= post_image.post_image_favorites.count %>
    <% end %>
  </h3>
  <% end %>
<% end %>