<div class="main top">
  <div class="container">
    <div class="row text-center mb-3">
      <div class="col mx-auto">
        <h1 class="about">Edit</h1>
      </div>
    </div>
    <div class="row">
      <div class="col-4 mx-auto">
        <%= form_with model: @post_image, local: true do |f| %>
        <div class="edit-form">
          <h4>Title</h4>
          <%= f.text_field :title, class:"form-control" %>
        </div>
        <div class="edit-form">
          <h4>Body</h4>
          <%= f.text_area :body, class:"form-control" %>
        </div>
        <div class="edit-form">
          <h4>Type of cat</h4>
          <%= f.collection_select :type_id, Type.all, :id, :name, prompt: "Choose Type" %>
        </div>
        <div class="edit-form">
          <h4>Sex</h4>
          <%= f.radio_button :sex, PostImage.sexes.key(0), checked: "checked" %>
          <%= f.label :sex, PostImage.sexes_i18n[:male] %>
          <%= f.radio_button :sex, PostImage.sexes.key(1) %>
          <%= f.label :sex, PostImage.sexes_i18n[:female] %>
          <%= f.radio_button :sex, PostImage.sexes.key(2) %>
          <%= f.label :sex, PostImage.sexes_i18n[:unknown] %><br>
        </div>
        <div class="edit-form">
          <%= f.select :status, PostImage.statuses.keys.map { |k| [t("enums.post_image.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
        </div>
          <%= f.submit "Save" %>
        <% end %>
      </div>
    </div>
  </div>
</div>
