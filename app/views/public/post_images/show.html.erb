<h1>Post Detail</h1>
<%= image_tag @post_image.image, :size => '300x300' %>
<%= @post_image.created_at.strftime('%Y/%m/%d') %>
<%= link_to user_path(@user) do %>
  <%= @post_image.user.user_name %>
<% end %>
<%= @post_image.title %>
<%= @post_image.body %>
<%= @post_image.sex %>

<% if user_signed_in? %>
  <% if @post_image.favorited_by?(current_user) %>
  <h3>
    <%= link_to post_image_post_image_favorites_path(@post_image), method: :delete do %>
      ♥<%= @post_image.post_image_favorites.count %>いいね
    <% end %>
  </h3>
  <% else %>
  <h3>
    <%= link_to post_image_post_image_favorites_path(@post_image), method: :post do %>
      ♡<%= @post_image.post_image_favorites.count %>いいね
    <% end %>
  </h3>
  <% end %>
<% end %>
<% if @user == current_user %>
  <%= link_to "Edit", edit_post_image_path(@post_image) %>
<% end %>

<p>コメント件数 : <%= @post_image.post_image_comments.count %></p>
<% @post_image.post_image_comments.each do |post_image_comment| %>
  <%= post_image_comment.user.user_name %>
  <%= post_image_comment.created_at.strftime('%Y/%m/%d') %>
  <%= post_image_comment.comment %>
<% end %>
<% if user_signed_in? %>
  <%= form_with model: [@post_image, @post_image_comment] do |f| %>
    <%= f.text_area :comment, placeholder:"comments" %>
    <%= f.submit "Post" %>
  <% end %>
<% end %>