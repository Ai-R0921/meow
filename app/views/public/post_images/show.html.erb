<h1>Post Detail</h1>
<%= image_tag @post_image.image, :size => '300x300' %>
<%= @post_image.created_at.strftime('%Y/%m/%d') %>
<%= @post_image.user.user_name %>
<%= @post_image.title %>
<%= @post_image.body %>
<%= @post_image.sex %>

<% if @user == current_user %>
  <%= link_to "Edit", edit_post_image_path(@post_image) %>
<% end %>
