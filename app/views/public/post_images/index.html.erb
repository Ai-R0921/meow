<div class="main top">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col mx-auto margin">
        <h1 class="about">Cats</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <% @post_images.each do |post_image| %>
      <div class="one-post">
        <p class="caption"><%= post_image.title %></p>
        <% if post_image.user.is_deleted %>
          <% next %>
        <% end %>
        <%= link_to post_image_path(post_image) do %>
          <% if post_image.image.attached? %>
            <%= image_tag post_image.image, :size => '200x200', class:"rounded img-responsive" %>
          <% end %>
        <% end %>
        <p class="caption"><%= post_image.user.user_name %></p>
        <p class="caption"><%= link_to "#{post_image.post_image_comments.count} コメント", post_image_path(post_image) %></p>
      </div>
      <% end %>
    </div>
    <div class="row text-center mt-5 mb-5">
      <div class="col mx-auto">
        <h1 class="subtitle">Ranking</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <% @all_ranks.each do |post_image| %>
      <div class="one-post">
        <p class="caption"><%= post_image.title %></p>
        <%= link_to post_image_path(post_image) do %>
          <% if post_image.image.attached? %>
            <%= image_tag post_image.image, :size => '200x200', class:"rounded img-responsive" %>
          <% end %>
        <% end %>
        <p class="caption"><%= post_image.user.user_name %></p>
        <p class="caption">♥<%= post_image.post_image_favorites.count %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>