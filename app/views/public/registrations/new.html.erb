<div class="container">
  <div class="row text-center mt-5 mb-5">
    <div class="col mx-auto">
      <h2>Sign up</h2>
    </div>
  </div>
  <div class="row">
    <div class="col-6 mx-auto">
      <table class="table table-borderless">
        <tbody>
        <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
        <%= render "public/shared/error_messages", resource: resource %>
        <tr>
          <td><%= f.label :user_name %></td>
          <td><%= f.text_field :user_name, autofocus: true, autocomplete: "user_name" %></td>
        </tr>
        <tr>
          <td><%= f.label :profile_image %></td>
          <td><%= f.file_field :profile_image, accept: "image/*" %></td>
        </tr>
        <tr>
          <td><%= f.label :email %></td>
          <td><%= f.email_field :email, autofocus: true, autocomplete: "email" %></td>
        </tr>
        <tr>
          <td><%= f.label :password %></td>
          <td>
            <% if @minimum_password_length %>
            <em>(<%= @minimum_password_length %> characters minimum)</em>
            <% end %>
            <%= f.password_field :password, autocomplete: "new-password" %>
          </td>
        </tr>
        <tr>
          <td><%= f.label :password_confirmation %></td>
          <td><%= f.password_field :password_confirmation, autocomplete: "new-password" %></td>
        </tr>
        <tr>
          <td></td>
          <td><%= f.submit "Sign up", class:"btn btn-outline-success rounded-pill" %></td>
        </tr>
        <% end %>
        </tbody>
      </table>
      <div class="row text-right">
        <div class="col mx-auto">
          <%= render "public/shared/links", class:"btn btn-outline-primary rounded-pill" %>
        </div>
      </div>
    </div>
  </div>
</div>