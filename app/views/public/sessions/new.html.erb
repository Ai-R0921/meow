<div class="container">
	<div class="d-flex justify-content-center h-100">
		<div class="card">
			<div class="card-header">
				<h3>Sign In</h3>
			</div>
			<div class="card-body">
				<%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
          <div class="row mt-3 justify-content-center">
            <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control" %>
          </div>
          <div class="row mt-3 justify-content-center">
            <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control" %>
          </div>
          <% if devise_mapping.rememberable? %>
            <div class="row mt-3 justify-content-center">
              <%= f.check_box :remember_me %>
              <%= f.label :remember_me %>
            </div>
          <% end %>
  				<div class="row mt-3 justify-content-center">
            <%= f.submit "Log in", class: "btn btn-outline-primary rounded-pill" %>
          </div>
        <% end %>
			</div>
			<div class="card-footer">
				<div class="d-flex justify-content-center links">
					アカウントをお持ちでない方
					<%= link_to "Sign Up", new_user_registration_path %>
				</div>
			</div>
		</div>
	</div>
</div>