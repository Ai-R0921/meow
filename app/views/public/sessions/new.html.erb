<div class="container">
  <div class="row text-center mt-5 mb-5">
    <div class="col mx-auto">
      <h2>Log in</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
    <div class="row mt-3 justify-content-center">
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"col-3" %>
    </div>
    <div class="row mt-3 justify-content-center">
      <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"col-3" %>
    </div>
    <% if devise_mapping.rememberable? %>
      <div class="row mt-3 justify-content-center">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>
    <div class="row mt-3 justify-content-center">
      <%= render "public/shared/links" %>
    </div>
    <div class="row mt-3 justify-content-center">
      <%= f.submit "Log in", class: "btn btn-outline-primary rounded-pill" %>
    </div>
  <% end %>
</div>