<% if user_signed_in? %>
  <% if post_lost_cat.favorited_by?(current_user) %>
  <h3>
    <%= link_to post_lost_cat_post_lost_cat_favorites_path(post_lost_cat), class:"white", method: :delete, remote: true do %>
      ♥<%= post_lost_cat.post_lost_cat_favorites.count %>
    <% end %>
  </h3>
  <% else %>
  <h3>
    <%= link_to post_lost_cat_post_lost_cat_favorites_path(post_lost_cat), class:"white", method: :post, remote: true do %>
      ♡<%= post_lost_cat.post_lost_cat_favorites.count %>
    <% end %>
  </h3>
  <% end %>
<% end %>