<div class="container">
  <div class="row text-center mt-5 mb-5">
    <div class="col mx-auto">
      <h1>New Post(Lost Cats)</h1>
    </div>
  </div>
      <%= form_with model: @post_lost_cat, url:post_lost_cats_path, method: :post, local: true do |f| %>
        <h4>Image</h4>
          <%= f.file_field :image, accept: "image/*" %>
        <h4>Title</h4>
          <%= f.text_field :title %>
        <h4>Comments</h4>
          <%= f.text_field :body %>
        <h4>Type of cat</h4>
          <%= f.collection_select :type_id, Type.all, :id, :name, prompt: "Choose Type" %>
        <h4>Sex</h4>
          <%= f.radio_button :sex, PostLostCat.sexes.key(0), checked: "checked" %>
          <%= f.label :sex, PostLostCat.sexes_i18n[:male] %>
          <%= f.radio_button :sex, PostLostCat.sexes.key(1) %>
          <%= f.label :sex, PostLostCat.sexes_i18n[:female] %>
          <%= f.radio_button :sex, PostLostCat.sexes.key(2) %>
          <%= f.label :sex, PostLostCat.sexes_i18n[:unknown] %><br>
      
          <%= f.select :status, PostLostCat.statuses.keys.map { |k| [t("enums.post_lost_cat.status.#{k}"),k]}, {}, {class: "custom-select w-25"} %>
          <%= f.submit "Post" %>
      <% end %>

