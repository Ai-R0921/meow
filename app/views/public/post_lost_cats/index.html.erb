<div class="main top">
  <div class="container">
    <div class="row text-center mb-5">
      <div class="col mx-auto margin">
        <h1 class="about">Lost Cats</h1>
      </div>
    </div>
    <div class="row justify-content-center">
      <% @post_lost_cats.each do |post_lost_cat| %>
      <div class="one-post">
        <p class="caption"><%= post_lost_cat.title %></p>
        <% if post_lost_cat.user.is_deleted %>
          <% next %>
        <% end %>
        <%= link_to post_lost_cat_path(post_lost_cat) do %>
          <% if post_lost_cat.image.attached? %>
            <%= image_tag post_lost_cat.image, class:"image-shape" %>
          <% end %>
        <% end %>
        <p class="caption"><%= post_lost_cat.user.user_name %></p>
        <p class="caption">
          <i class="fa-solid fa-heart"></i>&nbsp;<%= post_lost_cat.post_lost_cat_favorites.count %>&emsp;
          <i class="fa-solid fa-comment"></i>&nbsp;<%= link_to "#{post_lost_cat.post_lost_cat_comments.count}", post_lost_cat_path(post_lost_cat), class:"white" %>
         </p>
      </div>
      <% end %>
    </div>
  </div>
</div>
