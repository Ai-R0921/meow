<div class="container">
  <div class="row text-center mt-5">
    <div class="col mx-auto admin-subtitle">
      <h2>管理者ログイン</h2>
    </div>
  </div>
  <%= form_for(resource, as: resource_name, url: session_path(resource_name)) do |f| %>
  <div class="row mt-3 justify-content-center">
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "Email", class:"form-control col-3" %>
  </div>
  <div class="row mt-3 justify-content-center">
    <%= f.password_field :password, autocomplete: "current-password", placeholder: "Password", class:"form-control col-3" %>
  </div>
  <div class="row mt-5 justify-content-center">
    <%= f.submit "ログイン", class: "btn btn-outline-primary rounded-pill" %>
  </div>
  <% end %>
</div>
    <%#= render "admin/shared/links" %>