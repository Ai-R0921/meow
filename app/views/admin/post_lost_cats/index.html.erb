<div class="cover-index">
  <div class="container">
    <div class="row text-center mt-5 mb-5">
      <div class="col-7 text-right">
        <h2>迷子猫一覧</h2>
      </div>
      <div class="col-5 text-right">
        <%= link_to "投稿一覧", admin_post_images_path, class:"btn btn-outline-info rounded-pill" %>
      </div>
    </div>
    <div class="row justify-content-center">
      <% @post_lost_cats.each do |post_lost_cat| %>
      <div class="one-post">
        <p class="caption"><%= post_lost_cat.title %></p>
        <%= link_to admin_post_lost_cat_path(post_lost_cat) do %>
          <% if post_lost_cat.image.attached? %>
            <%= image_tag post_lost_cat.image, :size => '200x200', class:"rounded img-responsive" %>
          <% end %>
        <% end %>
        <p class="caption"><%= post_lost_cat.user.user_name %></p>
      </div>
      <% end %>
    </div>
  </div>
</div>
